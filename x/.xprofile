#!/bin/sh

PATH=$PATH:$HOME/code/bin
export EDITOR=nvim
export KEYTIMEOUT=2 #speed up zsh vi mode
export NETHACKOPTIONS=$HOME/.config/nethack/nethackrc #set nethack config file
export QT_AUTO_SCREEN_SCALE_FACTOR=1 #scale up firefox ui

userresources=$HOME/.config/x/xresources
usermodmap=$HOME/.config/x/xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# merge in defaults and keymaps

if [ -f $sysresources ]; then
    xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
    xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
    xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
    xmodmap "$usermodmap"
fi
