[user]
	name = yashlala
	email = yashlala@gmail.com
	signingkey = Yash Lala <yashlala@gmail.com>
[interactive]
	singlekey = true
[merge]
	tool = vimdiff
	ff = false
[mergetool]
	keepBackup = false
	prompt = false
[diff]
	tool = vimdiff
[alias]
	ada = add --all
	ad = add
	adi = add --interactive
	adp = add --patch
	bl = blame -s
	br = branch
	brd = branch --delete
	bre = branch --edit-description
	brm = branch --move
	chb = checkout -b
	ch = checkout
	chp = checkout --patch
	cl = clean --interactive # set safe default
	cld = clean --dry-run
	cli = clean --interactive
	coa = commit --amend
	co = commit
	coi = commit --interactive
	cp = cherry-pick
	di = diff --ignore-space-at-eol
	dis = diff --ignore-space-at-eol --staged
	dit = difftool
	diw = diff --ignore-space-at-eol --word-diff
	diws = diff --ignore-space-at-eol --word-diff --staged
	fe = fetch
	fep = fetch --prune
	gr = grep
	la = "!git config -l | grep alias | cut -c 7-" # list aliases
	loa = log --abbrev-commit --pretty=oneline --all
	lof = log --abbrev-commit --pretty=oneline --first-parent
	lola = log --abbrev-commit --all
	lolf = log log --abbrev-commit --first-parent
	lol = log --abbrev-commit
	lo = log --abbrev-commit --pretty=oneline
	me = merge
	met = mergetool
	pump = pull --merge --prune
	pum = pull --merge # pull-merge; *usually* default pull behavior
	pup = pull --prune
	pu = pull
	purp = pull --rebase --prune
	pur = pull --rebase
	rei = rebase --interactive
	re = rebase
	sh = show
	st = status --find-renames
	tad = tag --delete
	ta = tag
	usp = reset --patch HEAD
	us = reset HEAD
[apply]
	whitespace = nowarn
[core]
	whitespace = -trailing-space
	editor = vim
[gui]
	fontui = -family \"DejaVu Sans\" -size 18 -weight normal -slant roman -underline 0 -overstrike 0
[advice]
	statusHints = false
	detachedHead = false
[init]
	templatedir = ~/.config/git/templates
[branch]
	autosetuprebase = always
[commit]
	gpgsign = true
